/* шрифты было лень подключать */
*
  padding 0
  margin 0
  box-sizing border-box !important
  font-family Montserrat

.container
  max-width 1280px
  margin 0 auto

/* header */

.header
  width 100%
  height 100vh
  padding 30px 0 40px 0
  background url('../img/bg_header.jpg') center center / cover no-repeat
  &__wrapper
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    height 100%
  &__top-items
    width 100%
    display flex
    align-items center
  &__logo
    display block
    width 184px
    height 55px
    background url('../img/Logo.svg') center center / cover no-repeat
    margin-right 50px
  &__navigation
    margin-left auto
    display flex
    align-items center
    justify-content space-between
    width 620px
    height 100%
  &__link
    display block
    text-decoration none
    color #fff
    transition color .3s ease
    font-size 14px
    font-weight 300
    font-family Montserrat
  &__link:hover
    color #C7B299
  &__icons
    margin-left 54px
    height 100%
    display flex
    align-items center
  .icons
    &__link:last-of-type
      margin-left 30px
    &__link
      display block
      width 24px
      height 24px
  &__main-content
    width 1600px
    font-family Raleway !important
    display flex
    align-items center
    justify-content space-between
  .main-content
    &__arrow
      display block
      width 45px
      cursor pointer
    &__arrow:last-of-type
      margin-right 0
      transform scale(-1)
    &__text
      width 569px
      display flex
      flex-direction column
      align-items center
      font-family Raleway !important
      text-align center
  .bottom-btn
    width 10px
    height 10px
    outline none 
    background rgba(255, 255, 255, 0.5)
    border-radius 50%
    cursor pointer
    border none
    transition transform .3s, border .3s, background .3s ease
  .bottom-btn:not(:last-of-type)
    margin-right 7px
  .bottom-btn:hover
    transform scale(1.5)
    background none
    border 1px solid #D3C1AD
  .text
    &__title
      font-weight 500
      font-size 36px
      font-family Raleway !important
      color #fff
      margin-bottom 5px
    &__description
      font-size 16px
      font-family Raleway !important
      color #fff
      margin-bottom 40px
      line-height 1.2
    &__btn
      background #988574
      border-radius 3px
      padding 20px 40px
      font-size 14px
      color #fff
      font-family Roboto !important
      cursor pointer
      outline none
      border none

.active
  transform scale(1.5) !important
  background none !important
  border 1px solid #D3C1AD !important

.bold
  font-size 52px !important
  font-weight 600 !important
  margin-bottom 5px
.cart
  background url('../img/icon_cart.svg') center center / contain no-repeat
.search
  background url('../img/icon_search.svg') center center / contain no-repeat

/* header */

/* main */

/* advantages */

.advantages
  padding 85px 0
  &__wrapper
    width 100%
    display flex
    justify-content space-between
    align-items center
  &__item
    width 270px
    display flex
    flex-direction column
    align-items center
  &__item::after
    content ''
    display block
    background #555
    height 3px
    width 70px
    transition background .3s ease
    margin-top 30px
  &__item:hover::after
    background #C7B199
  &__item-img
    display block
    margin-bottom 30px
    transition fill .3s ease
  &__item:hover &__item-img
    fill #C7B299
  &__item-title
    font-family Raleway !important
    font-weight 600
    font-size 22px
    color #555
    margin-bottom 20px
    transition color .3s ease
  &__item:hover &__item-title
    color #C7B299
  &__item-content
    font-size 14px
    text-align center
    font-weight 300
    font-family Montserrat !important
    color #000

/* advantages */

/* ideas */

.ideas
  padding 80px 0 0 0 
  background #E5E5E5
  &__title
    font-family Raleway
    font-weight 600
    font-size 30px
    color #555
    text-align center
    margin-bottom 20px
  &__description
    font-size 16px
    color #8C8C8C
    text-align center
    font-family Montserrat
    font-weight 300
    width 60%
    margin 0 auto 40px auto
    line-height 1.2
  &__bg
    display block
    width 100%
    margin 0 auto

/* ideas */

/* theme */

.theme
  padding 45px 0
  background radial-gradient(94.87% 15543.47% at 4.58% 100%, #211B19 0%, #4E3326 100%)
  &__wrapper
    display flex
    justify-content space-between
    align-items center
  &__title
    font-size 28px
    font-family Raleway
    color #fff
    margin-bottom 5px
  &__color
    color #C7B299
  &__description
    font-size 18px
    color #615855
    font-weight 300
  &__btn
    font-family Roboto
    font-size 14px
    color #fff
    padding 20px 30px
    background #988574
    border none 
    outline none 
    border-radius 3px
    cursor pointer

/* theme */

/* projects */

.projects
  padding 60px 0 30px 0
  &__wrapper
    display flex
    flex-direction column
    align-items center
  &__title
    font-size 30px
    font-weight 600
    font-family Releway
    color #555
    margin-bottom 10px
  &__description
    width 60%
    font-size 16px
    font-family Montserrat
    text-align center
    font-weight 300
    line-height 1.2
    color #8C8C8C
    margin-bottom 30px
  &__button-case
    margin-bottom 70px
  .button-case
    &__button
      font-size 14px
      font-weight 300
      font-family Montserrat
      color #8C8C8C
      padding 7px 25px
      border-radius 3px
      outline none 
      border 1px solid #EBEBEB
      background #fff
      transition color, background .5s ease
      cursor pointer
    &__button:hover
      background #998575
      color #fff
    &__button:not(:last-of-type)
      margin-right 10px
  &__cards
    width 100%
    display flex
    flex-wrap wrap
    justify-content space-between
  &__card
    width 370px
    display block
    cursor pointer
  &__card:nth-of-type(n - 3)
    margin-bottom 70px
  &&__card:nth-of-type(-n + 3)
    margin-bottom 50px
  figcaption
    padding 26px 20px
    display block
    background #FBFAF8
    position relative
    transition background .5s ease
  figcaption::before
    content ''
    display block
    top -20%
    position absolute
    border 10px solid transparent
    border-bottom 10px solid #FBFAF8
    transition opacity .3s ease
    opacity 1
  &__card:hover figcaption
    background #352F2D
  &__card:hover figcaption .card__title
    color #fff
  &__card:hover figcaption .card__description
    color #C7B299
  &__card:hover figcaption::before
    opacity 0
  .card
    &__img
      display block
    &__title
      font-size 20px
      font-family Raleway
      font-weight 500
      color #C7B299
      margin-bottom 10px
      transition color .5s ease
    &__description
      font-size 14px
      font-weight 300
      color #D1D1D1
      transition color .5s ease
  &__button
    font-size 14px
    font-family Roboto 
    color #fff
    padding 20px 45px
    outline none 
    border-radius 3px
    background #988574
    border none 
    cursor pointer

.peeked-card
  background #352F2D !important
.peeked-card .card__title
  color #fff !important
.peeked-card .card__description
  color #C7B299 !important
.peeked-card::before 
  display none !important
.peeked-button
  background #998575 !important
  color #fff !important

