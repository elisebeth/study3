/* stats */

.stats
  padding 35px 0 50px 0
  background radial-gradient(94.87% 15543.47% at 4.58% 100%, #211B19 0%, #4E3326 100%)
  &__wrapper
    display flex
    align-items center
    justify-content center
  &__item
    display flex
    flex-direction column
    align-items center
    width 120px
  &__item:not(last-of-type)
    margin-right 70px
  &__item-img
    width 45px
    height 45px
    display block
    margin-bottom 5px
  &__item-num
    color #fff
    font-size 48px
    font-weight 300
    font-family Montserrat
    margin-bottom 5px
  &__item-title
    font-size 14px
    color #C7B299
    font-weight 300
    font-family Montserat
    position relative
  &__item-title::after
    content ''
    height 2px
    width 30px
    position absolute
    left 50%
    transform: translateX(-50%)
    display block
    margin-top 15px
    background #fff

/* stats */

/* recent */

.recent
  padding 100px 0 40px 0
  &__wrapper
    display flex
    flex-direction column
    align-items center
  &__title
    font-size 30px
    font-family Raleway 
    color #555
    margin-bottom 20px
    text-align center
  &__description
    width 65%
    font-size 16px
    line-height 1.75
    font-weight 300
    text-align center
    font-family Montserrat 
    color #8C8C8C
    margin-bottom 30px
  &__inner
    display flex
    width 100%
    justify-content space-between
    align-items center
  &__button-case
    width 100px
    display flex
    justify-content center
    margin-top 55px
  &__button
    width 22px
    height 22px
    display block
    border-radius 50%
    fill #D1D1D1
    cursor pointer
    transition fill .3s ease
    transform scale(-1)
  &__button:last-of-type
    transform scale(1)
    margin-left 20px
  &__button:hover
    fill #C7B299
  .inner
    &__item
      width 370px
      cursor pointer
    &__item:hover .item__text-content
      border-color #352F2D
      background #352F2D
    &__item:hover .text-content__title
      color #C7B299
    &__item:hover .text-content__description
      color #fff
  .item
    &__img
      width 100%
      display block
    &__text-content
      padding 30px 20px 20px 30px
      border-bottom 1px solid #B2B2B2
      border-right 1px solid #B2B2B2
      border-left 1px solid #B2B2B2
      transition border, background .3s ease
  .text-content
    &__title
      font-size 20px
      font-weight 500
      color #555
      font-family Raleway
      margin-bottom 20px
      transition color .3s ease
    &__description
      font-weight 300
      font-size 14px
      color #000
      font-family Montserrat 
      line-height 1.5
      margin-bottom 15px
      transition color .3s ease
    &__read-more
      font-weight 300
      font-size 14px
      color #C7B299
      font-family Montserrat
      cursor pointer
      position relative
