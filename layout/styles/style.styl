/* шрифты было лень подключать */
*
  padding 0
  margin 0
  box-sizing border-box !important
  font-family Montserrat

.container
  max-width 1280px
  margin 0 auto

/* header */

.header
  width 100%
  height 100vh
  padding 30px 0 40px 0
  background url('../img/bg_header.jpg') center center / cover no-repeat
  &__wrapper
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    height 100%
  &__top-items
    width 100%
    display flex
    align-items center
  &__logo
    display block
    width 184px
    height 55px
    background url('../img/Logo.svg') center center / cover no-repeat
    margin-right 50px
  &__navigation
    margin-left auto
    display flex
    align-items center
    justify-content space-between
    width 620px
    height 100%
  &__link
    display block
    text-decoration none
    color #fff
    transition color .3s ease
    font-size 14px
    font-weight 300
    font-family Montserrat
  &__link:hover
    color #C7B299
  &__icons
    margin-left 54px
    height 100%
    display flex
    align-items center
  .icons
    &__link:last-of-type
      margin-left 30px
    &__link
      display block
      width 24px
      height 24px
  &__main-content
    width 1600px
    font-family Raleway !important
    display flex
    align-items center
    justify-content space-between
  .main-content
    &__arrow
      display block
      width 45px
      cursor pointer
    &__arrow:last-of-type
      margin-right 0
      transform scale(-1)
    &__text
      width 569px
      display flex
      flex-direction column
      align-items center
      font-family Raleway !important
      text-align center
  .text
    &__title
      font-weight 500
      font-size 36px
      font-family Raleway !important
      color #fff
      margin-bottom 5px
    &__description
      font-size 16px
      font-family Raleway !important
      color #fff
      margin-bottom 40px
    &__btn
      background #988574
      border-radius 3px
      padding 20px 40px
      font-size 14px
      color #fff
      font-family Roboto !important
      cursor pointer
      outline none
      border none

.bold
  font-size 52px !important
  font-weight 600 !important
  margin-bottom 5px
.cart
  background url('../img/icon_cart.svg') center center / contain no-repeat
.search
  background url('../img/icon_search.svg') center center / contain no-repeat

